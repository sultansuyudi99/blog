<% if is_logged_in? %>
  <div class="flex flex-col gap-8">
    <section class="w-full">
      <div class="user_info bg-white p-4 rounded-lg shadow-sm border border-neutral-200">
        <%= render "shared/user_info" %>
      </div>
      <div class="micropost_form mt-6 bg-white p-4 rounded-lg shadow-sm border border-neutral-200">
        <%= render "shared/micropost_form" %>
      </div>
    </section>
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-neutral-800 mb-4">Micropost Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <% content_for :title, "Home" %>

  <div class="text-center w-full space-y-4 mx-auto max-w-lg">
    <%= image_tag "rails.svg", alt: "Rails logo", width: "500", class: "mx-auto" %>
    <h2 class="text-lg">
      This is the home page for the
      <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "inline-flex h-10 items-center bg-blue-200 font-medium transition-colors shadow-sm rounded-md px-6 py-1 hover:bg-blue-200/80" %>

    <p class="text-neutral-500">For help go to <%= link_to "Help", help_path, class: "underline text-blue-300" %> </p>
  </div>
<% end %>
