<% content_for :title, "Edit user" %>

<h1 class="text-4xl font-bold text-center">Update your profile</h1>

<%= form_with(model: @user, class: "w-full max-w-md mx-auto") do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="my-5">
    <%= f.label :name, class: "block font-medium mb-1" %>
    <%= f.text_field :name, class: "block shadow rounded-md outline-none px-3 py-2 mt-2 w-full focus:ring-blue-500" %>
  </div>

  <div class="my-5">
    <%= f.label :email, class: "block font-medium mb-1" %>
    <%= f.text_field :email, class: "block shadow rounded-md outline-none px-3 py-2 mt-2 w-full focus:ring-blue-500" %>
  </div>

  <div class="my-5">
    <%= f.label :password, class: "block font-medium mb-1" %>
    <%= f.password_field :password, class: "block shadow rounded-md outline-none px-3 py-2 mt-2 w-full focus:ring-blue-500" %>
  </div>

  <div class="my-5">
    <%= f.label :password_confirmation, class: "block font-medium mb-1" %>
    <%= f.password_field :password_confirmation, class: "block shadow rounded-md outline-none px-3 py-2 mt-2 w-full focus:ring-blue-500" %>
  </div>

  <%= f.submit "Save Changes", class: "bg-blue-500 rounded-lg text-white w-full py-3 px-5 inline-block font-medium cursor-pointer transition duration-200" %>
<% end %>

<div class="gravatar_edit text-center mt-6">
  <%= gravatar_for @user %>
  <a href="https://gravatar.com/emails" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline ml-2">change</a>
</div>
